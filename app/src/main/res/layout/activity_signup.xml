<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.example.nam.healthforyou.Signup">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="EmailId"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/input_name" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이메일 아이디"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="비밀번호"
        android:layout_below="@+id/input_id"
        android:layout_alignStart="@+id/input_id" />

    <EditText
        android:id="@+id/input_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:layout_below="@+id/input_pw"
        android:layout_alignStart="@+id/input_pw"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/input_confirmpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="이름"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_confirmpw"
        android:layout_below="@+id/input_confirmpw"
        android:layout_marginTop="18dp"
        android:text="이름" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/complete_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="성별" />

            <Spinner
                android:id="@+id/input_sex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="64dp"
                android:layout_weight="1"
                android:entries="@array/sex" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="나이" />

            <EditText
                android:id="@+id/input_age"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:hint="나이"
                android:inputType="numberDecimal"
                android:maxLength="2" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/input_name"
        android:layout_marginTop="11dp"
        android:text="*이하 정보는 건강정보 통계에 사용됩니다"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:id="@+id/complete_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="확인"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginStart="17dp" />

    <Button
        android:id="@+id/cancel_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="취소"
        android:layout_alignBaseline="@+id/complete_signup"
        android:layout_alignBottom="@+id/complete_signup"
        android:layout_alignEnd="@+id/linearLayout" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cancel2"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/input_confirmpw"
        android:layout_toEndOf="@+id/input_confirmpw" />

    <Button
        android:id="@+id/id_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_id"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/input_id"
        android:text="중복확인" />

</RelativeLayout>
