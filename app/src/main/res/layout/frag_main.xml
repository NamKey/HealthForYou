<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="320sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">


            <LinearLayout
                android:id="@+id/heart_rate"
                android:layout_width="150sp"
                android:layout_height="140sp"
                android:layout_margin="10sp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_horizontal"
                    android:text="심박수"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    app:srcCompat="@drawable/rate" />

                <TextView
                    android:id="@+id/tv_heartrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:text="BPM"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pressure"
                android:layout_width="150sp"
                android:layout_height="140sp"
                android:layout_margin="10sp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_horizontal"
                    android:text="수축기 혈압"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    app:srcCompat="@drawable/pulse" />

                <TextView
                    android:id="@+id/tv_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:text="mmHg"
                    android:textSize="17sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/spo2"
                android:layout_width="150sp"
                android:layout_height="140sp"
                android:layout_margin="10sp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_horizontal"
                    android:text="산소포화도"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    app:srcCompat="@drawable/oxygen" />

                <TextView
                    android:id="@+id/tv_spo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:text="%"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/respiaratoryRate"
                android:layout_width="wrap_content"
                android:layout_height="140sp"
                android:layout_margin="10sp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_horizontal"
                    android:text="호흡수"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    app:srcCompat="@drawable/lungs" />

                <TextView
                    android:id="@+id/tv_riiv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:text="time/min"
                    android:textSize="17sp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="61dp"
        android:text="최근 측정일"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/tv"
        android:text="--.--.--"
        android:textSize="16sp" />

</RelativeLayout>